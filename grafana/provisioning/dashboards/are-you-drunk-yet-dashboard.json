{
  "dashboard": {
    "id": null,
    "title": "Are You Drunk Yet - Application Dashboard",
    "tags": ["flask", "prometheus", "business"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "5s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Total Calculations",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(calculations_total)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 100},
                {"color": "red", "value": 1000}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Calculations by Gender",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (gender) (calculations_total{result_type=\"success\"})",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(flask_http_request_total[5m])",
            "refId": "A",
            "legendFormat": "{{method}} {{status}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 4,
        "title": "Response Time",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(calculation_duration_seconds_bucket[5m]))",
            "refId": "A",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, rate(calculation_duration_seconds_bucket[5m]))",
            "refId": "B",
            "legendFormat": "50th percentile"
          }
        ],
        "yAxes": [
          {
            "unit": "s"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 5,
        "title": "Drinks Recommended Distribution",
        "type": "histogram",
        "targets": [
          {
            "expr": "increase(drinks_recommended_bucket[5m])",
            "refId": "A",
            "legendFormat": "{{le}} drinks"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 6,
        "title": "User Weight Distribution",
        "type": "histogram",
        "targets": [
          {
            "expr": "increase(user_weight_kg_bucket[5m])",
            "refId": "A",
            "legendFormat": "{{le}} kg"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 7,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(calculations_total{result_type!=\"success\"}[5m])",
            "refId": "A",
            "legendFormat": "{{result_type}}"
          }
        ],
        "yAxes": [
          {
            "unit": "reqps"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 8,
        "title": "Operation Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(span_duration_seconds_bucket[5m]))",
            "refId": "A",
            "legendFormat": "{{span_name}} 95th"
          }
        ],
        "yAxes": [
          {
            "unit": "s",
            "logBase": 10
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 24}
      },
      {
        "id": 9,
        "title": "Recent Calculations",
        "type": "table",
        "targets": [
          {
            "expr": "increase(calculations_total[1m])",
            "refId": "A",
            "format": "table"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 32}
      }
    ]
  },
  "overwrite": true
} 